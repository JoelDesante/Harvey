#/bin/sh

#
#   This utility helps setup the development enviorment.
#

# Setup Colors
RED='\033[0;31m'
WHITE='\033[0;97m'
REDBG='\033[0;41m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

# Install dependancies on the local system
printf "${NC}üì¶ ${GREEN}Installing developer dependancies to the local system...\n\n"
npm install --only=dev

# Copy the .env.sample to the config folder
printf "${NC}üìã ${GREEN}Copying configuration from sample...\n\n"
cp ./config/.env.sample ./config/.env

# Check to make sure docker is installed
printf "${NC}üëÄ ${GREEN}Checking for docker\n"
if [ -x "$(command -v docker)" ]; then
    printf "${NC}‚öì ${GREEN}Docker found. Running setup...\n\n"
    docker-compose up
else
    printf "${NC}‚ö†Ô∏è ${REDBG}${WHITE} ERR ${NC} Docker is either not installed or can not be executed.\n"
    printf "Try running this script again with administrator rights.\n\n"

    # Clean up
    printf "Cleaning Up..."
    rm ./config/.env
    rm -rf ./node_modules

    exit
fi